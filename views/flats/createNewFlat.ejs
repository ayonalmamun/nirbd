<%- include("../partials/header_create") %>

<div class="container">
	<div class="row">
		<h1 style="text-align:center">Create a new Flat!</h1>

	<div style="width:30%;margin:25px auto;">
		<form action="/flats" method="post">
		<div class="form-group">
			<input class="form-control" type="text" name= "name" placeholder="name">
		</div>
		<div class="form-group">
		<input class="form-control" type="text" name= "description" placeholder="description">
		</div>
		<div class="form-group">
			<input class="form-control" type="text" name= "image" placeholder="image url">
		</div>
		<div class="form-group">
		<input class="form-control" type="number" name= "price" placeholder="price" min="1000000" step="100000">
		</div>
		<div class="form-group">
		<input class="form-control" type="text" name= "contact" placeholder="contact">
		</div>
		<div class="form-group">
			<button class="btn btn-lg btn-primary btn-block">Submit</button>
		</div>
		</form>
		<a href="/flats">Go Back</a>	
	</div>
	</div>
</div>
<%- include("../partials/footer") %>
	