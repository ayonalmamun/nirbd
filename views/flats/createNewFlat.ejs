<%- include("../partials/header_create") %>

<div class="container">
	<div class="row justify-content-center">
		<div class="col-md-12 text-center">
			<h1>Create a Add!</h1>
		</div>
	<div class="col-xs-12 col-md-6 col-lg-4">
		<form action="/flats" method="post">
		<div class="form-group">
			<input class="form-control" type="text" name= "name" placeholder="name">
		</div>
        <div class="form-group">
		<input class="form-control" type="text" name= "description" placeholder="description">
		</div>
        <div class="form-group">
			<input class="form-control" type="text" name= "image" placeholder="image url">
		</div>
		<div class="form-group">
			<input class="form-control" type="number" name= "price" placeholder="price" min="1000000" step="100000">
		</div>
        <div class="form-group">
		<input class="form-control" type="text" name= "contact" placeholder="contact">
		</div>
		<div class="form-group">
			<button class="btn btn-lg btn-primary btn-block">Submit</button>
		</div>
		</form>
		<a href="/flats">Go Back</a>	
	</div>
	</div>
</div>
<%- include("../partials/footer") %>
	